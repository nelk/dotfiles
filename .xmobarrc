Config { font = "-*-Fixed-Bold-R-Normal-*-13-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , allDesktops = True
       , position = TopW L 100 -- Static { xpos = 1920, ypos = 0, width = 1800, height = 16 }
       , commands = [ Run Weather "EGPF" ["-t"," <tempC>C","-L","64","-H","77","--normal","green","--high","red","--low","lightblue"] 36000

                    , Run BatteryP ["BAT0"]
                        ["-t","Bat: <left>% / <timeleft>"
                        , "-L","30"
                        , "-H","90"
                        , "-l","orange"
                        , "-n","red"
                        , "-h","green"
                        ] 60
                        --, "--","-c","energy_full"] 60
                    , Run Network "eth0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Network "wlan0" ["-L","0","-H","32","--normal","green","--high","red"] 10
                    , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Swap [] 10
                    , Run Date "%a %b %_d %l:%M" "date" 10
                    , Run Volume "default" "Master" ["-t", "Vol: <volume>% <status>"] 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "Disco %StdinReader% }{ %battery% | %eth0% | %wlan0% | %default:Master% | %cpu% %memory% %swap%    <fc=#ee9a00>%date%</fc> | %EGPF%"
       }
