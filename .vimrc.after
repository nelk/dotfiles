
set nocompatible
set modelines=0

set t_Co=256
colorscheme molokai

set tags=tags;
set wrap
set visualbell
set cursorline
set ruler
set undofile
set relativenumber
set scrolloff=3 " Leave 3 lines above/below cursor visible at all times

" Can leave modified buffers
set hidden

nnoremap / /\v
vnoremap / /\v

set ignorecase
set smartcase
set gdefault

" Prevent hard-wrap
set textwidth=0
set wrapmargin=0

nnoremap <leader><space> :noh<cr>

