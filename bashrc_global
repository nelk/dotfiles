
export DOTFILES=~/dotfiles

# Run bash profiles if they exist
if [ -e ~/.bash_profile ]; then
  source ~/.bash_profile
fi
if [ -e ~/.bashrc ]; then
  source ~/.bashrc
fi

if [ ! $VIMPATH ]; then
  export VIMPATH='vim'
fi
alias vim=$VIMPATH
alias v='vim .'

alias gai='git add -i'
alias gcam='git commit --amend'
alias gri='git rebase -i'
alias gk='gitk --all &'
alias gd='git diff'
gvo() { $VIMPATH `git diff --name-only -w "$@"` }

export GIT_EXTERNAL_DIFF=$DOTFILES/vim_diff.sh
export GIT_PAGER=

export EDITOR=$VIMPATH

