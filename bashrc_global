
export DOTFILES=~/dotfiles

# Run bash profiles if they exist
if [ -e ~/.bash_profile ]; then
  source ~/.bash_profile
fi
if [ -e ~/.bashrc ]; then
  source ~/.bashrc
fi

if [ ! $VIMPATH ]; then
  export VIMPATH='vim'
fi
alias vim=$VIMPATH
alias v='vim .'
alias tmux='tmux -2'

# Git aliases - some others are already provided by oh-my-zsh at:
# ./oh-my-zsh/plugins/git/git.plugin.zsh
alias gsts='git status -s'
alias gf='git fetch'
alias gai='git add -i'
alias gcam='git commit -a -v --amend'
alias gri='git rebase -i'
alias gk='gitk --all &'
alias gd='git diff'
alias glgo='git log --graph --max-count=20 --oneline'
gvo() { $VIMPATH `git diff --name-only -w "$@"` }

export GIT_EXTERNAL_DIFF=$DOTFILES/vim_diff.sh
export GIT_PAGER=

export EDITOR=$VIMPATH

